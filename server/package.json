{
  "name": "server",
  "version": "1.0.0",
  "description": "bm-server",
  "main": "functions/server.js",
  "scripts": {
    "dev": "node -r ts-node/register ./src/server.ts",
    "dev:watch": "nodemon",
    "start": "./node_modules/.bin/netlify-lambda serve src",
    "tsc": "tsc && npm run build",
    "build": "./node_modules/.bin/netlify-lambda build dist"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm dev",
    "ext": "ts"
  },
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "netlify-lambda": "^2.0.1",
    "random-words": "^1.1.1",
    "serve": "^11.3.2",
    "serverless-http": "^2.6.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.7",
    "@types/aws-lambda": "^8.10.64",
    "@types/node": "^14.14.10",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}